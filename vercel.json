{
  "version": 2,
  "buildCommand": "cd app && npm install && npm run build",
  "outputDirectory": "app/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "app/backend/**"
    }
  }
}
